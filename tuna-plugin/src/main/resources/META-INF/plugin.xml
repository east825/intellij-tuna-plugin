<idea-plugin>
  <id>com.jetbrains.tuna-plugin</id>
  <version>0.2</version>
  <name>TUNA</name>
  <vendor email="mikhail.Ä¡olubev@jetbrains.com" url="http://www.jetbrains.com">JetBrains</vendor>

  <description>
    <![CDATA[  <h3>Terrific Unified Notification Apparatus</h3>
        <p>Simplistic tool for integration with Slack from JetBrains IDEs.</p>
        ]]>
  </description>

  <depends>com.intellij.modules.lang</depends>

  <extensions defaultExtensionNs="com.intellij">
    <projectConfigurable displayName="TUNA" id="tuna" instance="com.jetbrains.tuna.TunaConfigurable"/>
  </extensions>

  <project-components>
    <component>
      <implementation-class>com.jetbrains.tuna.TunaProjectComponent</implementation-class>
    </component>
  </project-components>

  <actions>
    <action id="com.jetbrains.tuna.ui.GotoSlackUserAction" class="com.jetbrains.tuna.ui.GotoSlackUserAction"
            text="Send message to Slack user"/>
  </actions>

  <actions>
    <action id="tuna.WhatTheCode" class="com.jetbrains.tuna.actions.WhatTheCodeAction" text="What's The Code" icon="/icons/tuna.png"/>
  </actions>
</idea-plugin>